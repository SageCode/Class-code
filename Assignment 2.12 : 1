ho = 1.2
vo = 5.4
g = 9.8
print("A ball is thrown upwards form the ground at a height of 1.2 meters with a")
print("velocity of 5.4 meters per second.")
print("Please specify variable for t (seconds) to see the ball's conditions at that time.")
print("(The ball will not bounce and will not move throught the floor.)")
t = int(input())

h = (ho + vo*t - 0.5*g*(t)**2)
v = (vo - g*t)
if h <= 0:
    v = 0
    h = 0
print("Height at t = ", t, " seconds is ", h, " meters")
print("Velocity at t = ", t, " seconds is ", v, " meters per second")
