import numpy as np
g = 9.8
h_0 = 10
y = np.arange(10,0,-0.5)
t = (2 * (h_0 - y) / g )**0.5

print("This program shows statistics for a ball dropping from a height of ten meters.")
while True:
    print("Type 'y' or 't' to see an array with the statistics for the height or time respectively,")
    print("or type 'ex' to exit.")
    see = raw_input()
    if see == str("y"):
        print y
    elif see == str("t"):
        print t
    elif see == str("ex"):
        print("Goodbye!")
        break 
    else:
        print(" I don't recognize that command.")
